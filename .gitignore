.vscode/
.idea/
*.swp
*.swo
*~
.project
.settings/
.classpath
*.sublime-project
*.sublime-workspace

# ============================================================================
# Temporary files 臨時文件
# ============================================================================
*.tmp
*.temp
*.bak
*.backup
*.orig
*.rej
.cache/

# ============================================================================
# Runtime data 運行時數據
# ============================================================================
pids
*.pid
*.seed
*.pid.lock
.grunt
.sass-cache/

# ============================================================================
# Optional npm cache directory
# ============================================================================
.npm

# ============================================================================
# Optional eslint cache
# ============================================================================
.eslintcache

# ============================================================================
# Microbundle cache
# ============================================================================
.rpt2_cache/
.rts2_cache_cjs/
.rts2_cache_es/
.rts2_cache_umd/

# ============================================================================
# Optional REPL history
# ============================================================================
.node_repl_history

# ============================================================================
# Output of 'npm pack'
# ============================================================================
# *.tgz (移到專案特定區域)

# ============================================================================
# Yarn Integrity file
# ============================================================================
.yarn-integrity

# ============================================================================
# parcel-bundler cache (https://parceljs.org/)
# ============================================================================
.parcel-cache

# ============================================================================
# Next.js build output
# ============================================================================
.next

# ============================================================================
# Nuxt.js build / generate output
# ============================================================================
.nuxt

# ============================================================================
