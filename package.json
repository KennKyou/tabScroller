{
  "name": "tab-scroller",
  "version": "2.0.2",
  "description": "A JavaScript library for creating scrollable tabs with drag-and-drop functionality",
  "main": "src/tabScroller.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:js && npm run build:umd && npm run build:css",
    "build:js": "terser src/tabScroller.js -o dist/tabScroller.min.js --source-map --compress --mangle",
    "build:umd": "terser dist/tabScroller.umd.js -o dist/tabScroller.umd.min.js --source-map --compress --mangle",
    "build:css": "postcss src/tabScroller.css -o dist/tabScroller.min.css --use autoprefixer --use cssnano",
    "dev": "npm run build && npm run serve",
    "serve": "http-server . -p 3000 -o",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "publish:check": "npm pack --dry-run",
    "publish:script": "./scripts/publish.sh"
  },
  "keywords": [
    "tabs",
    "scroller",
    "horizontal-scroll",
    "drag-scroll",
    "ui-component",
    "javascript",
    "responsive"
  ],
  "author": "KennKyou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KennKyou/tabScroller.git"
  },
  "bugs": {
    "url": "https://github.com/KennKyou/tabScroller/issues"
  },
  "homepage": "https://github.com/KennKyou/tabScroller#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0"
  },
  "files": [
    "src/",
    "dist/tabScroller.umd.js",
    "dist/tabScroller.min.js",
    "dist/tabScroller.min.css",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
